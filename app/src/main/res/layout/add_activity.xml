<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/AddCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Добавление показаний"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/AddCounter"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="10dp"
            android:text="Номер счетчика:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edit_number"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/number_text"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@+id/number_text"
            android:hint="Введите номер счетчика">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/number_text"
            android:layout_below="@+id/number_text"
            android:layout_marginTop="40dp"
            android:text="Показания:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edit_data"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edit_number"
            android:layout_alignRight="@+id/edit_number"
            android:layout_alignBottom="@+id/data_text"
            android:layout_marginRight="-161dp"
            android:layout_marginBottom="0dp"
            android:hint="Введите показания"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_data"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="94dp"
            android:onClick="Add"
            android:text="Добавить" />




    </RelativeLayout>

</LinearLayout>